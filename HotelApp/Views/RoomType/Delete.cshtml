@model EntityLayer.Entities.RoomType
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-success text-white text-center border my-5 shadow">Silme</h1>
<div class="row">
    <div class="col-md-6 offset-md-1 border p-3 shadow">
        <form action="Edit" method="post">
            
            <div class="form-group row">
                <input type="hidden" asp-for="RoomTypeId" />
                <label for="text1" class="col-4 col-form-label">Oda tipi</label>
                <div class="col-8">
                    <input id="text1" asp-for="RoomName" disabled type="text" class="form-control border shadow">
                    
                </div>
            </div>
            <div class="form-group row">
                <label for="text" class="col-4 col-form-label">Oda Fiyatı</label>
                <div class="col-8">
                    <input id="text" asp-for="RoomPrice" disabled type="text" class="form-control border shadow">
                   

                </div>
            </div>
            <div class="form-group row">
                <div class="offset-4 col-8">
                    <button type="submit" class="btn btn-danger">Sil</button>
                </div>
                <div class="offset-4 col-8">
                    <a asp-action="Index" class="btn btn-primary">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>
